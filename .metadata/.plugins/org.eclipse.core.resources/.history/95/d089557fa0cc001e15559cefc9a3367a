package com;

public class Bank {
	private int accountnumber;
	private double balance;
	private String name;

	Bank(int acc, double bal, String nm) {
		accountnumber = acc;
		balance = bal;
		name = nm;
	}

	public int getAccountnumber() {
		return accountnumber;
	}

	public int setAccountnumber(int accn) {
		if (accn < 5) {
			accountnumber = accn;
		} else {
			System.out.println("Please Write proper account number ");
		}
		return accn;

	}

	public double getBalance() {
		return balance;
	}

	public void setBalance(double bal) {
		if (bal > 0) {
			balance = bal;
		} else {
			System.out.println("Balance cannot be negative");
		}
	}

	public String getName() {
		return name;
	}

	public void setName(String na) {
		name = na;
	}

}
